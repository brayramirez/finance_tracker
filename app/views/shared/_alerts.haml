- if notice.present?
  .alert.alert-info.alert-dismissable
    = link_to 'x', '#', :class => 'close',
      :data => {:dismiss => 'alert'}
    = notice


- if flash[:success].present?
  .alert.alert-success.alert-dismissable
    = link_to 'x', '#', :class => 'close',
      :data => {:dismiss => 'alert'}
    = flash[:success]


- if alert.present? || flash[:error].present?
  - message = alert || flash[:error]

  .alert.alert-danger.alert-dismissable
    = link_to 'x', '#', :class => 'close',
      :data => {:dismiss => 'alert'}
    - if message.is_a? String
      = message
    - else
      - message.each do |msg|
        %p= msg
