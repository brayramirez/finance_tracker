- if user_signed_in?
  %header.navbar.navbar-static-top.navbar-inverse
    .container
      .navbar-header
        = link_to 'Finance Tracker', root_path,
          :class => 'navbar-brand'
      .navbar-collapse
        %ul.nav.navbar-nav.navbar-left
          -#  %li
          -#    =link_to 'Categories', :categories
          - if current_user.admin?
            %li
              = link_to 'Users', [:admin, :users]
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to "#{current_user}<b class='caret'></b>".html_safe, '#',
              :class => 'dropdown-toggle',
              :data => {:toggle => 'dropdown'}
            %ul.dropdown-menu
              %li= link_to 'My Account',
                [:edit, current_user]
              %li= link_to 'Log out',
                destroy_user_session_path,
                :method => :delete
