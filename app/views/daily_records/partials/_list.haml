.col-md-10
	.pull-right
		= link_to 'New Daily Transaction',
			[:new, cutoff, :daily_record],
			:class => 'btn btn-primary'

	.clearfix

	%table.table.table-striped.table-hover.table-condensed
		%thead
			%tr
				%th Transaction Date
				%th Budget
				%th Expenses
				%th
		%tbody
			= render :partial => 'daily_records/partials/daily_record',
				:collection => cutoff.daily_records.latest
