= form_for daily_record, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :transaction_date, :class => 'control-label'
    .controls
      = f.date_field :transaction_date

  .control-group
    = f.label :budget, :class => 'control-label'
    .controls
      = f.text_field :budget

  .control-group
    = f.label :notes, :class => 'control-label'
    .controls
      = f.text_area :notes, :rows => 8

  .control-group
    .controls
      = f.submit 'Save', :class => 'btn btn-primary'
      = link_to 'Back', daily_records_path, :class => 'btn'