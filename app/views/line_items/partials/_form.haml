.mdl-card__supporting-text
  .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
    = f.text_field :amount,
        :class => 'mdl-textfield__input',
        :pattern => '-?[0-9]*(\.[0-9]+)?'
    = f.label :amount, :class => 'mdl-textfield__label'
    %span.mdl-textfield__error Input is not a number

  .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
    = f.text_area :description,
      :class => 'mdl-textfield__input',
      :rows => 5
    = f.label :description, :class => 'mdl-textfield__label'

.mdl-card__actions.mdl-card--border
  = icon_submit_button
  - if form.persisted?
    = icon_cancel_button form.model.daily_record
