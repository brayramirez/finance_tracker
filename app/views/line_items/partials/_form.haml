=form_for [daily_record, line_item], :remote => true,
  :html => { :class => 'form-horizontal' } do |f|

  .modal-body
    .form-group
      =f.label :description, :class => 'control-label col-sm-3'
      .col-sm-8
        =f.text_area :description, :rows => 5,
          :class => 'form-control'
    .form-group
      =f.label :amount, :class => 'control-label col-sm-3'
      .col-sm-8
        =f.text_field :amount, :class => 'form-control'

  .modal-footer
    =f.submit 'Save', :class => 'btn btn-primary'
    =link_to 'Close', '#', :class => 'btn btn-default',
      :data => { :dismiss => 'modal' }