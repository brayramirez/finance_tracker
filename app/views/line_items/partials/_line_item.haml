%tr{:id => "line-item-#{line_item.id}"}
	%td= line_item.description
	%td= number_with_precision(line_item.amount, :precision => 2)
	%td
		= link_to 'Edit', [:edit, line_item], :remote => true
		= link_to 'Delete', line_item,
			:data => {:method => :delete,
				:confirm => 'Delete this record?'}
