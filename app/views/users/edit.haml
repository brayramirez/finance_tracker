.mdl-grid
  .mdl-cell.mdl-cell--2-col
  .mdl-cell.mdl-cell--8-col
    .mdl-grid.mdl-grid--no-spacing
      .mdl-card.mdl-shadow--2dp.mdl-cell.mdl-cell--12-col
        = form_for @user do |f|
          .mdl-card__supporting-text
            .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
              = f.text_field :name,
                :class => 'mdl-textfield__input',
                :autofocus => true
              = f.label :name, :class => 'mdl-textfield__label'

            .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
              = f.password_field :current_password,
                :class => 'mdl-textfield__input'
              = f.label :current_password, 'Current Password',
                :class => 'mdl-textfield__label'

            .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
              = f.password_field :password,
                :class => 'mdl-textfield__input'
              = f.label :password, 'New Password',
                :class => 'mdl-textfield__label'

            .mdl-textfield.mdl-js-textfield.mdl-textfield--full-width.mdl-textfield--floating-label
              = f.password_field :password_confirmation,
                :class => 'mdl-textfield__input'
              = f.label :password_confirmation, 'Re-type Password',
                :class => 'mdl-textfield__label'

          .mdl-card__actions.mdl-card--border
            = button_tag :type => :submit,
              :class => 'mdl-button mdl-js-button mdl-button--primary mdl-button--fab mdl-button--mini-fab' do
              = icon('check')
            = link_to icon('arrow_back'), [:root],
              :class => 'mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab'
